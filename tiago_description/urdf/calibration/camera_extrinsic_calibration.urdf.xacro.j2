<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- INCLUDES -->
  <xacro:include filename="$(find pal_urdf_utils)/urdf/deg_to_rad.urdf.xacro" />

  <!-- MACRO DEFINITION -->
  <xacro:macro name="camera_baseline_constants" params="camera_model">

    <xacro:if value="${camera_model == 'orbbec-astra'}">
      <origin xyz="{{ x|default(0.0, true) }} {{ y|default(0.025, true) }} {{ z|default(0.0, true) }}" 
              rpy="{{ roll|default(0.0, true) }} {{ pitch|default(0.0, true) }} {{ yaw|default(0.0, true) }}" />
    </xacro:if>
    <xacro:if value="${camera_model == 'orbbec-astra-pro'}">
      <origin xyz="{{ x|default(0.0, true) }} {{ y|default(0.025, true) }} {{ z|default(0.0, true) }}" 
              rpy="{{ roll|default(0.0, true) }} {{ pitch|default(0.0, true) }} {{ yaw|default(0.0, true) }}" />
    </xacro:if>
    <xacro:if value="${camera_model == 'asus-xtion'}">
      <origin xyz="{{ x|default(0.0, true) }} {{ y|default(0.049, true) }} {{ z|default(0.0, true) }}" 
              rpy="{{ roll|default(0.0, true) }} {{ pitch|default(0.0, true) }} {{ yaw|default(0.0, true) }}" />
    </xacro:if>

  </xacro:macro>

</robot>
